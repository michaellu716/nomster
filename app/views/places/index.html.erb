
<% @places.each do |place| %>
  <div class="card col-10 offset-1">
  	<h3 class="placesTitle"><%= link_to place.name, place_path(place) %></h3>
    <i><%= place.address %></i><br /><br />
    <p><%= place.description %></p>

    <!-- Displays created by user
    <% if place.user.present? %>
      <small><%= place.user.email %></small>
    <% end %>-->
 <% if place.comments.present? %>
 	<div class="col-12">
 		<hr class="style-two">
	    <blockquote>
		      <% if place.comments.last.humanized_rating.present? %>
		        <b><%= place.comments.last.humanized_rating %></b> -
		      <% end %>
		      <%= place.comments.last.message %>
		      <br/><small>-<%= place.comments.last.user.email %></small>
	    </blockquote>
	    </div>
 	<% end %>
 </div>
<% end %>
 
<div class="col-md-12 d-flex justify-content-center">
	<%= will_paginate @places, previous_label: h("<"), next_label: h(">") %>
</div>

<br/>

<footer class="footer">
      <div class="container">
        <p class="footer-text">Created by Michael Lu - 2019 </p>
      </div>
</footer>